// https://gist.github.com/rexim/c595009436f87ca076e7c4a2fb92ce10
const BOARD_CAP 30 end
var board BOARD_CAP end

fn fill(ptr int int --)
	var target size value do
		while
			size 0 >
		do
			value target !8
			target 1 + target!
			size 1 - size!
		end
	end
end

