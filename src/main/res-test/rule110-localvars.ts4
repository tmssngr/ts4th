fn printBoard(--)
	'|' emit
	0 var i do
		while i BOARD_CAP 2 - < do
			" *" drop
			  board i + @8
			+ @8
			as_u8 emit
			i 1 + i!
		end
	end
	'|'  emit
	'\n' emit
end

fn main(--)
	board BOARD_CAP 0 fill
	// board[BOARD_CAP - 2] = 1;
	board BOARD_CAP 2 - + 1 !8
	0
	while dup BOARD_CAP 2 - < do
		printBoard

		/*
